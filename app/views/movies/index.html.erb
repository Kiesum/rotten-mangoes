<h1>Rotten Mangoes</h1>
  <%= link_to "Submit a movie!", new_movie_path %>
  <hr>

<%= form_tag(movies_path, :method => "get", id: "search-form") do %>
<div>
<%= text_field_tag :title, params[:title], placeholder: "title" %>
</div>
<div>
<%= text_field_tag :director, params[:director], placeholder: "title" %>
</div>
 <div>
    <%=select_tag :duration, options_for_select([
      ['Any Duration','0'],
      ['Under 90 minutes', '0-90'],
      ['Between 90 and 120 minutes', '90-120'],
      ['Over 120 minutes','120']]
      )%>
  </div>
<%= submit_tag "Search" %>
<% end %>

  <% @movies.each do |movie| %>
    <p>
    <%= image_tag movie.image.poster.url %>
    </p> 
    <h2><%= link_to movie.title, movie_path(movie) %></h2>
    <h3>release date: <%= formatted_date(movie.release_date) if movie.release_date%></h3>
    <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
    <p><%= movie.description %></p>
    <p>Average rating: <%= movie.review_average %>/10</p>
    <hr>
  <% end %>

