<div class="container">
  <div class="row">
    <div class="col-md-3 col-md-offset-5">
      <h3>Log In</h3>
        <%= form_tag session_path do %>
          <div class="form-group">
            <%= label_tag :email %><br/>
            <%= text_field_tag :email %>
          </div>
          <div class="form-group">
            <%= label_tag :password %><br/>
            <%= password_field_tag :password %>
          </div>
          <div class="form-group">
            <%= submit_tag "Log In", :class => 'btn' %>
          </div>
        <% end %>
    </div>    
  </div>      
</div>